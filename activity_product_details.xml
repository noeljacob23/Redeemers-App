<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/scroll_view" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintBottom_toTopOf="@+id/buy_layout" app:layout_constraintTop_toTopOf="0">
        <androidx.constraintlayout.widget.ConstraintLayout android:background="#f2f1ef" android:layout_width="match_parent" android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/image_layout" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintDimensionRatio="1:1" app:layout_constraintTop_toTopOf="0">
                <androidx.viewpager.widget.ViewPager android:id="@+id/image_view_pager" android:visibility="visible" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintDimensionRatio="1:1" app:layout_constraintTop_toTopOf="0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView android:background="@drawable/in_app_purchase_detail_gradient" android:layout_width="match_parent" android:layout_height="150dp" app:layout_constraintTop_toTopOf="0"/>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0">
                <ImageView android:id="@+id/back_button" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_back_white_24dp"/>
            </RelativeLayout>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/actions_layout" android:layout_width="match_parent" android:layout_height="51dp" android:paddingStart="19dp" android:paddingEnd="19dp" app:layout_constraintBottom_toBottomOf="@+id/image_layout">
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/view_pager_count_dots" android:layout_width="wrap_content" android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
                <ImageView android:id="@+id/share_button" android:background="?attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="0dp" android:paddingStart="10dp" android:paddingEnd="10dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_share_white_24dp"/>
                <ImageView android:id="@+id/zoom_button" android:background="?attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="0dp" android:paddingStart="10dp" android:paddingEnd="10dp" android:layout_marginEnd="5dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintEnd_toStartOf="@+id/share_button" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_zoom_in_white_24dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View android:id="@+id/space_one" android:layout_width="match_parent" android:layout_height="10dp" app:layout_constraintTop_toBottomOf="@+id/image_layout"/>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/title_layout" android:background="@color/white" android:paddingTop="14dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="20dp" android:paddingEnd="20dp" app:layout_constraintTop_toBottomOf="@+id/space_one">
                <TextView android:textSize="15.5sp" android:textStyle="normal" android:textColor="#000000" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingExtra="4.5sp" android:fontFamily="sans-serif-medium" app:layout_constraintTop_toTopOf="0"/>
                <TextView android:textSize="19sp" android:textStyle="normal" android:gravity="center_horizontal" android:id="@+id/price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:includeFontPadding="false" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif-medium" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/title"/>
                <TextView android:textSize="13sp" android:textStyle="bold" android:textColor="#969696" android:gravity="center_horizontal" android:id="@+id/discounted_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="2dp" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif" android:layout_marginStart="9dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toEndOf="@+id/price"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View android:id="@+id/space_two" android:layout_width="match_parent" android:layout_height="10dp" app:layout_constraintTop_toBottomOf="@+id/title_layout"/>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/quantity_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="51dp" android:paddingStart="20dp" android:paddingEnd="20dp" app:layout_constraintTop_toBottomOf="@+id/space_two">
                <TextView android:textSize="15.5sp" android:textStyle="normal" android:textColor="#000000" android:id="@+id/quantity_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/e_commerce_quantity" android:lineSpacingExtra="4.5sp" android:fontFamily="sans-serif" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintTop_toTopOf="0"/>
                <ImageView android:id="@+id/quantity_up" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_add_circle_outline_24dp"/>
                <TextView android:textSize="19sp" android:textStyle="normal" android:textColor="#000000" android:id="@+id/quantity_amount_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif" android:layout_marginEnd="15dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/quantity_up" app:layout_constraintTop_toTopOf="0"/>
                <ImageView android:id="@+id/quantity_down" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="14dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/quantity_amount_text" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_remove_circle_outline_24dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View android:id="@+id/space_three" android:layout_width="match_parent" android:layout_height="10dp" app:layout_constraintTop_toBottomOf="@+id/quantity_layout"/>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/description_layout" android:background="@color/white" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="20dp" android:paddingEnd="20dp" app:layout_constraintTop_toBottomOf="@+id/space_three">
                <TextView android:textSize="15.5sp" android:textStyle="normal" android:textColor="#000000" android:id="@+id/description_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/e_commerce_product_description" android:lineSpacingExtra="4.5sp" android:fontFamily="sans-serif"/>
                <View android:id="@+id/divider" android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/description_text"/>
                <WebView android:textSize="14sp" android:textColor="#000000" android:id="@+id/description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif-condensed" app:layout_constraintTop_toBottomOf="@+id/divider"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View android:id="@+id/space_four" android:layout_width="match_parent" android:layout_height="10dp" app:layout_constraintTop_toBottomOf="@+id/description_layout"/>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/return_terms_layout" android:background="@color/white" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="20dp" android:paddingEnd="20dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/space_four">
                <com.mobiroller.views.CircleImageView android:id="@+id/return_icon" android:layout_width="25dp" android:layout_height="25dp" app:civ_border_color="#b8b8b7" app:civ_border_width="0.5dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_cached"/>
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginStart="9dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/return_icon" app:layout_constraintTop_toTopOf="0">
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#a0a0a0" android:id="@+id/return_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/e_commerce_return_title" android:lineSpacingExtra="6sp" android:textAllCaps="true" android:fontFamily="sans-serif-medium"/>
                    <TextView android:textSize="14sp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/e_commerce_return_description" android:lineSpacingExtra="2sp" android:fontFamily="sans-serif-condensed" app:layout_constraintTop_toBottomOf="@+id/return_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/shipping_terms_layout" android:background="@color/white" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2.5dp" android:paddingStart="20dp" android:paddingEnd="20dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/return_terms_layout">
                <com.mobiroller.views.CircleImageView android:id="@+id/shipping_icon" android:layout_width="25dp" android:layout_height="25dp" android:src="@drawable/ic_local_shipping" app:civ_border_color="#b8b8b7" app:civ_border_width="0.5dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintTop_toTopOf="0"/>
                <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/constraintLayout2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginStart="9dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/shipping_icon" app:layout_constraintTop_toTopOf="0">
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#a0a0a0" android:id="@+id/shipping_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/e_commerce_shipping_title" android:lineSpacingExtra="6sp" android:textAllCaps="true" android:fontFamily="sans-serif-medium"/>
                    <TextView android:textSize="14sp" android:textColor="#000000" android:id="@+id/textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/e_commerce_shipping_description" android:lineSpacingExtra="2sp" android:fontFamily="sans-serif-condensed" app:layout_constraintTop_toBottomOf="@+id/shipping_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View android:layout_width="match_parent" android:layout_height="16.5dp" app:layout_constraintTop_toBottomOf="@+id/shipping_terms_layout"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/buy_layout" android:background="@color/white" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="60dp" android:paddingStart="20dp" android:paddingEnd="20dp" app:layout_constraintBottom_toBottomOf="0">
        <Button android:textSize="17sp" android:textColor="@color/white" android:id="@+id/buy_button" android:background="@drawable/in_app_purchase_view_pager_item_buy_radius" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/e_commerce_buy_now" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif-condensed"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
